# Application
ENVIRONMENT=development
DEBUG=true
SECRET_KEY=super-secret-key-change-in-production
API_V1_STR=/api/v1
PROJECT_NAME="UDSM Student Hub API"

# Database
DATABASE_URL=postgresql+asyncpg://lms_user:lms_password@localhost/lms_db
ASYNC_DATABASE_URL=postgresql+asyncpg://lms_user:lms_password@localhost/lms_db
SYNC_DATABASE_URL=postgresql://lms_user:lms_password@localhost/lms_db

# Redis
REDIS_URL=redis://localhost:6379

# JWT
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7
JWT_PRIVATE_KEY_PATH=./keys/private.pem
JWT_PUBLIC_KEY_PATH=./keys/public.pem

# Email
EMAIL_ENABLED=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# SMS (Africa's Talking)
AT_API_KEY=your-api-key
AT_USERNAME=sandbox
AT_SENDER_ID=UDSM

# Object Storage
STORAGE_PROVIDER=minio
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=udsm-lms
MINIO_SECURE=false

S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=
S3_REGION=us-east-1
S3_BUCKET=

# AI / ML
OPENAI_API_KEY=
ENABLE_RISK_PREDICTION=true

# Frontend URL
FRONTEND_URL=http://localhost:5173
