{
  "primitive": {
    "color": {
      "primary": "#6DD7FD",
      "text": "#212121",
      "surface": "#FFFFFF",
      "bg": "#F3F8FB",
      "border": "#CFD8DC",
      "success": "#2E7D32",
      "warning": "#ED6C02",
      "error": "#D32F2F"
    },
    "space": {
      "2": 8,
      "3": 12,
      "4": 16,
      "6": 24
    },
    "radius": {
      "sm": 8,
      "md": 12
    }
  },
  "semantic": {
    "light": {
      "bgApp": "{primitive.color.bg}",
      "bgSurface": "{primitive.color.surface}",
      "textPrimary": "{primitive.color.text}",
      "borderDefault": "{primitive.color.border}",
      "actionPrimaryBg": "{primitive.color.primary}",
      "actionPrimaryText": "{primitive.color.text}"
    }
  },
  "component": {
    "button": {
      "height": 48,
      "radius": "{primitive.radius.sm}",
      "primaryBg": "{semantic.light.actionPrimaryBg}",
      "primaryText": "{semantic.light.actionPrimaryText}"
    },
    "receipt": {
      "idPrefix": "UDSM",
      "borderAccent": "{primitive.color.success}"
    },
    "offlineBanner": {
      "text": "You are offline. Changes are saved and will sync when connected."
    }
  }
}
